{
  "name": "webpack5.x",
  "version": "1.0.0",
  "description": "webpack5.x template",
  "main": "src/index.js",
  "scripts": {
    "serve": "webpack serve --config build/webpack.development.config.js --progress",
    "build": "webpack build --config build/webpack.production.config.js",
    "lint:js": "eslint --ext .js,.vue src --fix",
    "lint:css": "stylelint src/**/*.{vue,scss,css,sass} --fix",
    "eslint": "npm run lint:js && npm run lint:css"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "yarn lint:js",
      "git add"
    ],
    "**/src/**/*.vue": [
      "yarn lint:js",
      "yarn lint:css",
      "git add"
    ],
    "**/styles/**/*.{css,scss}": [
      "yarn lint:css",
      "git add"
    ]
  },
  "keywords": [
    "webpack",
    "webpack5",
    "webpack5.x template",
    "Vue",
    "Vue SPA"
  ],
  "author": "humorHan",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.12.13",
    "@babel/eslint-parser": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/runtime": "^7.12.13",
    "@babel/runtime-corejs2": "^7.0.0",
    "@babel/runtime-corejs3": "^7.12.13",
    "babel-loader": "^8.2.2",
    "babel-plugin-lodash": "^3.3.4",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "^3.8.3",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-vue": "^7.5.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.5",
    "node-sass": "^5.0.0",
    "postcss-loader": "^5.0.0",
    "postcss-preset-env": "^6.7.0",
    "resolve-url-loader": "^3.1.2",
    "sass": "^1.7.3",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "url-loader": "^4.1.1",
    "vue": "^2.6.12",
    "vue-loader": "^15.9.6",
    "vue-router": "^3.5.1",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^5.20.2",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "devDependencies": {}
}
